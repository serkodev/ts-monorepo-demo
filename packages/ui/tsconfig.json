{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",

    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "outDir": "dist",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,

    "paths": {
      "~": ["."],
      "~/*": ["./*"]
    }
  }
}
