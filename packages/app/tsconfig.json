{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",

    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,

    "composite": true,

    "paths": {
      "~": ["."],
      "~/*": ["./*"]
    }
  },
  "references": [{ "path": "../ui/tsconfig.json" }]
}
